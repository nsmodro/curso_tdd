package br.com.componente.arquivo;

import java.awt.image.ImageProducer;
import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.FileWriter;
import java.io.IOException;
import java.io.InputStream;
import java.util.ArrayList;
import java.util.Collection;
import java.util.List;
import java.util.Scanner;

import br.com.componente.src.Usuario;

public class Arquivo {
	
	private File arquivo;

	public Arquivo(String nomeArquivo) {
		criarArquivo(nomeArquivo);
	}

	private void criarArquivo(String nomeArquivo) {
		arquivo = new File(nomeArquivo);
		if (!existe()) {
			try {
				arquivo.createNewFile();
			} catch (IOException e) {
				e.printStackTrace();
			}
		} 
	}

	public boolean existe() {
		return arquivo.exists();
	}

	public void escreve(String texto) {
		try {
			FileWriter fileWriter = new FileWriter(arquivo);
			fileWriter.write(texto);
			fileWriter.close();
		} catch (IOException e) {
			e.printStackTrace();
		}
	}

	public String getTextoArquivo() {
		String textoArquivo = new String();
		try {
			InputStream is = new FileInputStream(arquivo);
			Scanner scanner = new Scanner(is);
			while (scanner.hasNext()) {
				textoArquivo += scanner.nextLine();
			}
			scanner.close();
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		return textoArquivo;
	}
	
	public List<Object> getTextoArquivoEmLista() {
		List<Object> list =  new ArrayList<>();
		
		try {
			InputStream is = new FileInputStream(arquivo);
			Scanner scanner = new Scanner(is);
			while (scanner.hasNext()) {
				String[] linha = scanner.nextLine().split(";");
				list.add(linha);
			}
			scanner.close();
		} catch (FileNotFoundException e) {
			e.printStackTrace();
		}
		return list;
	}
	
